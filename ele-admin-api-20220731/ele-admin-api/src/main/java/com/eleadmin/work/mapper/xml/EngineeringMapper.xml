<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eleadmin.work.mapper.EngineeringMapper">

    <!-- 关联查询sql -->
    <sql id="selectSql">
        SELECT a.*
        FROM engineering a
        <where>
            <if test="param.id != null">
                AND a.id = #{param.id}
            </if>
            <if test="param.engineeringName != null">
                AND a.engineering_name LIKE CONCAT('%', #{param.engineeringName}, '%')
            </if>
            <if test="param.unitId != null">
                AND a.unit_id = #{param.unitId}
            </if>
            <if test="param.engineeringAddress != null">
                AND a.engineering_address LIKE CONCAT('%', #{param.engineeringAddress}, '%')
            </if>
            <if test="param.distance != null">
                AND a.distance LIKE CONCAT('%', #{param.distance}, '%')
            </if>
            <if test="param.status != null">
                AND a.status = #{param.status}
            </if>
        </where>
    </sql>

    <!-- 分页查询 -->
    <select id="selectPageRel" resultType="com.eleadmin.work.entity.Engineering">
        <include refid="selectSql"></include>
    </select>

    <!-- 查询全部 -->
    <select id="selectListRel" resultType="com.eleadmin.work.entity.Engineering">
        <include refid="selectSql"></include>
    </select>

</mapper>
